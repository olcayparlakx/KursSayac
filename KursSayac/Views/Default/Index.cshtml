@model IEnumerable<KursSayac.Models.mvcKursInfoModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kurslar</h2>

<p>
    @Html.ActionLink("Yeni Kurs Oluştur", "CreateInfo", new { @type = "button" }, new { @class= "btn btn-primary" })
</p>
<table class="table table-striped table-bordered  table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KursName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KursName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditInfo", new { id=item.KursID }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "InfoDetails", new { id=item.KursID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "DeleteInfo", new { id=item.KursID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
